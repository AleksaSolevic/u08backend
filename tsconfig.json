{
  "compilerOptions": {
    /* Output Directory */
    "outDir": "./dist", // ✅ Output compiled JavaScript to the 'dist' folder
    "rootDir": "./src", // ✅ Source files are inside the 'src' folder

    /* Module Resolution */
    "module": "CommonJS", 
    "moduleResolution": "Node", 
    "esModuleInterop": true, 

    /* Target Version */
    "target": "ES2019", 

    /* Strict Type Checking */
    "strict": true, 
    "forceConsistentCasingInFileNames": true, 

    /* File Watching */
    "skipLibCheck": true 
  },
  "include": ["src"], // ✅ Only include files from 'src'
  "exclude": ["node_modules", "dist"] // ✅ Do not compile 'node_modules' or 'dist'
}
